<div class="column">
  <table>
    <tbody>
      <% @screencasts.each do |screencast| %>
        <tr>
          <td class="td-thumbnail">
            <%= link_to(image_tag(screencast.thumbnail_url, class: "thumbnail"), screencast_path(screencast[:slug])) %>
          </td>
          <td class="td-left">
            <div class="text-column">
              <h4>
                <%= link_to screencast.title, screencast_path(screencast[:slug]) %>
              </h4>
              <div class="height-5"></div>
              <span class="date-display">
                <%= (screencast[:display_date] || screencast.created_at).strftime("%Y-%m-%d") %>
              </span> 
              <div class="height-5"></div>
              
            </div>
          </td>
          <td class="td-right desktop-only">
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div style="text-align: center;">
    <%= paginate @screencasts %>
  </div>
  <% if @screencasts.length < 1 %>
    <p class="no-content">No Matching Result</p>
  <% end %>
</div>

